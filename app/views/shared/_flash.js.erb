<% if flash[:notice].present? %>
  toastr.success('<%= j(flash[:notice]) %>')
  <% flash[:notice] = nil %>
<% elsif flash[:alert].present? %>
  toastr.error('<%= j(flash[:alert]) %>')
  <% flash[:alert] = nil %>
<% elsif flash[:warning].present? %>
  toastr.warning('<%= j(flash[:warning]) %>')
  <% flash[:warning] = nil %>
<% end %>
