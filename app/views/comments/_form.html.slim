= form_for [protocol, content, comment], remote: true, html: { class: 'form-horizontal', role: 'form' } do |f|
  = f.hidden_field :content_id, value: content.id
  = f.hidden_field :user_id, value: current_user.id
  = f.hidden_field :parent_id, value: parent_id
  = f.text_area :body, class: 'form-control mt-s mb-s'
  .text-right
    = f.submit class: 'btn btn-default', id: 'comment-submit-button'
    = button_tag t('.cancel'), type: :button, class: 'btn btn-default ml-s', id: 'remove-comment-form'

javascript:
  function checkInput() {
    if ($('#comment_body').val().length > 0) {
      $('#comment-submit-button').prop('disabled', false);
    } else {
      $('#comment-submit-button').prop('disabled', true);
    }
  }

  $('#remove-comment-form').click(() => {
    resetFrom();
  });

  $('#comment_body').keyup(() => {
    checkInput();
  });

  checkInput();
