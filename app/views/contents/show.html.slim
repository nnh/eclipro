.col-md-12
  h3 = "#{t('.protocol')}: #{@protocol.title}"

.row
  .col-md-4.content-tabs(
    data-sections-text=t('.sections')
    data-instructions-text=t('.instructions')
    data-example-text=t('.example')
    data-instructions=@instructions
    data-example=@example
    data-copy-text=t('.copy')
    data-copy-confirm=t('.copy_confirm')
    data-no-seq=@content.no_seq
    data-contents=@contents.to_json
    data-editable="#{(can? :update, @content) ? true : ''}"
  )

  .col-md-8
    = render 'editor', protocol: @protocol, content: @content
